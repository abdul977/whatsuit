<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">800dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="queryHint">Search notifications</item>
        <item name="android:textColorHint">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="Base.Theme.WhatsUit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">#757575</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#424242</item>
        <item name="colorOnPrimaryContainer">#E0E0E0</item>
        <item name="colorSecondary">#9E9E9E</item>
        <item name="colorOnSecondary">#212121</item>
        <item name="colorSecondaryContainer">#616161</item>
        <item name="colorOnSecondaryContainer">#F5F5F5</item>
        <item name="android:colorBackground">#212121</item>
        <item name="colorOnBackground">#EEEEEE</item>
        <item name="colorSurface">#303030</item>
        <item name="colorOnSurface">#EEEEEE</item>
        <item name="colorSurfaceVariant">#424242</item>
        <item name="colorOnSurfaceVariant">#BDBDBD</item>
        <item name="colorOutline">#9E9E9E</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- Enable edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <!-- Enable transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>
</resources>
