<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="250"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/timeFilterChipGroup"
            motion:touchAnchorSide="bottom"
            motion:dragScale="0.8"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/timeFilterChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@id/timeFilterChipGroup">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/sortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/divider">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/sortOrderGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@id/sortLabel"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/sortLabel"
            motion:layout_constraintBottom_toBottomOf="@id/sortLabel">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/timeFilterChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:translationY="-80dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@id/timeFilterChipGroup"
            android:translationY="-80dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/sortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/divider"
            android:translationY="-80dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.0"/>
        </Constraint>

        <Constraint
            android:id="@+id/sortOrderGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@id/sortLabel"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/sortLabel"
            motion:layout_constraintBottom_toBottomOf="@id/sortLabel"
            android:translationY="-80dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.0"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>
